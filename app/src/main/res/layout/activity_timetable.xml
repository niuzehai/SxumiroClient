<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_week"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_head_month"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:gravity="left|top"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="四月"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_head_monday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周一" />

        <TextView
            android:id="@+id/tv_head_tuesday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周二" />

        <TextView
            android:id="@+id/tv_head_wednesday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周三" />

        <TextView
            android:id="@+id/tv_head_thursday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周四" />

        <TextView
            android:id="@+id/tv_head_friday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周五" />

        <TextView
            android:id="@+id/tv_head_saturday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周六" />

        <TextView
            android:id="@+id/tv_head_sunday"
            style="@style/courseTableText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_class_head_title"
            android:text="周日" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_week"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/rl_class_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>