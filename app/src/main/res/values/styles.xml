<resources>

    <!--Base Theme-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_blue_400</item>

        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- remove shadow below action bar 5.0 -->
        <!--<item name="android:elevation">0dp</item>-->
        <!-- Support library compatibility -->
        <!--<item name="elevation">0dp</item>-->
    </style>

    <!-- Normal application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
        <!--actionbar text color-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowBackground">@color/comment_bg</item>

    </style>

    <!-- 设置标题栏样式 -->
    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- 标题栏文字样式 -->
    <style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <!-- 新鲜事详情页-->
    <style name="FreshNewsDetailActivityTheme" parent="@style/AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="courseTableText">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="FloatingLabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
    </style>

    //去除5.0以上AppBarLayout的阴影问题
    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <!--<style name="UnderlineSpinner" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
    <!--<item name="android:spinnerStyle">?android:attr/spinnerItemStyle</item>-->

    <!--</style>-->

</resources>
